<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardElevation="12dp"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the  product to sell"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="#323232"
                />
            <EditText
                android:id="@+id/card_prod_id"
                android:layout_below="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the product name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <EditText
                android:id="@+id/card_cost_id"
                android:layout_below="@+id/card_prod_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the product cost"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <Button
                android:id="@+id/cardBtn_id"
                android:layout_below="@id/card_cost_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttoncolor1"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="@drawable/textcolor1" />



        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>