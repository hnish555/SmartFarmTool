<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:id="@+id/a_miv1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_local_florist_black_24dp"

        />
    <TextView android:id="@+id/a_mtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/a_miv1"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="@string/string1"/>



    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/farmer_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/farmersection"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a_mtv1"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttoncolor"
        android:textColor="@drawable/textcolor"
        android:textAllCaps="false"



         />

    <Button
        android:id="@+id/sell_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sell_buy"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/farmer_section"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttoncolor"
        android:textColor="@drawable/textcolor"

        android:textAllCaps="false"
        />

</android.support.constraint.ConstraintLayout>